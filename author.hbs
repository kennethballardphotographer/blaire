{{!< default}}

<div class="content-area gh-outer">
<main class="site-main gh-inner">

    {{#author}}
        <section class="term">
            <h1 class="term-name">{{name}}</h1>
        </section>
    {{/author}}

    <div class="post-feed gh-feed">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

    {{#if @custom.use_pagination}}
    {{pagination}}
    {{/if}}
</main>
</div>