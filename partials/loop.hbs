<article class="{{post_class}}{{#unless feature_image}} no-image{{/unless}}">
    {{#if feature_image}}
        <figure class="post-media">
            <div {{#unless @custom.proportional_images_on_feeds}}class="u-placeholder same-height rectangle"{{/unless}}>
                <a class="post-image-link" href="{{url}}">
                    <img
                        class="post-image{{#unless @custom.proportional_images_on_feeds}} u-object-fit{{/unless}}"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 750w,
                                {{img_url feature_image size="l"}} 960w,
                                {{img_url feature_image size="xl"}} 1140w,
                                {{img_url feature_image size="xxl"}} 1920w"
                        sizes="(min-width: 992px) 500px, (min-width: 768px) 250px, 92vw"
                        src="{{img_url feature_image size="xl"}}"
                        alt="{{title}}"
                        loading="lazy"
                    >
                </a>
            </div>

            {{#if with_caption}}
                {{#if feature_image_caption}}
                    <figcaption>{{feature_image_caption}}</figcaption>
                {{/if}}
            {{/if}}
        </figure>
    {{/if}}

    <div class="post-wrapper">
        <header class="post-header">
            {{#unless @custom.meta_below_title}}
            <div class="post-meta">{{> "post-meta"}}</div>
            {{/unless}}

            <h2 class="post-title">
                <a class="post-title-link" href="{{url}}">{{title}}</a>
            </h2>
            {{#if @custom.meta_below_title}}
            <div class="post-meta">{{> "post-meta"}}</div>
            {{/if}}
        </header>

        {{#if excerpt}}
            <div class="post-excerpt">
                {{excerpt words="33"}}
            </div>
        {{/if}}

        <footer class="post-footer">
            <div class="post-author">
                {{#foreach authors}}
                    {{#if profile_image}}
                        <a class="post-author-link" href="{{url}}">
                            <img class="post-author-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}">
                        </a>
                    {{/if}}
                {{/foreach}}
            </div>
            <a class="read-more" href="{{url}}">
                Read More
                {{> "icons/arrow-right"}}
            </a>
        </footer>
    </div>
</article>
