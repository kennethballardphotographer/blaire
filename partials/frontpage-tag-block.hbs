{{#get "tags" limit="all"}}
<div class="tag-feed" data-count="{{pagination.total}}">
    {{#foreach tags}}
    <div class="tag u-placeholder">
        {{#if feature_image}}
        <img class="tag-image u-object-fit" src="{{img_url feature_image}}" alt="{{name}}">
        {{/if}}
        <div class="tag-content">
            <h2 class="tag-name">{{name}}</h2>
    
            {{#if description}}
            <div class="tag-description">
                {{description}}
            </div>
            {{/if}}
        </div>
        <a class="u-permalink" href="{{url}}"></a>
    </div>
    {{/foreach}}
</div>
{{/get}}


